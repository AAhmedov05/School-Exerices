@model IEnumerable<ToDoWeb.Models.Task>

@{
    ViewData["Title"] = "ToDo";
}
<style>
    #ToDo {
        display:flex;
        justify-content:space-between;
        gap:5px
    }
    .Exercises {
        min-height: 350px;
        min-width: 33%;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: white;
        border-radius:5px;
    }
    .OpenTask {
        background-color: #022F40;
    }
    .InProgressTask {
        background-color: #38AECC;
    }
    .FinishedTask {
        background-color: #0A1128;
    }
    h2 {
        padding:5px;
    }
    hr {
        height:5px;
        width:95%;
        margin:0px 0px 5px 0px;
        border-radius:5px;
        background-color:white;
    }
    .Task {
        height:50px;
        width:325px;
        margin:5px;
        display:flex;
        justify-content:space-between;
        gap:50px;
        align-items:center;
        background-color:snow;
        color:black;
        border:2px solid white;
        border-radius:5px;
    }
    .Task h3 {
        margin-left:5px;
    }
    .Task a {
        height: 25px;
        width: 25px;
    }
    .CRUD {
        display:flex;
        justify-content:flex-end;
        gap:10px;
        opacity:0;
        margin-right:5px;
    }
    .CRUD:hover {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        opacity:1;
    }
    svg {
        max-height:25px;
        max-width:25px;
        fill:black;
    }
</style>
<p>
    <a asp-action="Create" class="btn btn-success">Create New Task</a>
</p>

