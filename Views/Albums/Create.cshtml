@model IRunes.Models.Album

@{
    ViewData["Title"] = "Create";
}
<h1 class="text-center text-white">Create Album</h1>

<hr style="border: 2px solid white" />
<section class="CreateSection">
    <form class=" d-flex flex-column align-items-center text-center " asp-action="Create ">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <hr style="border: 2px solid white; width: 1106px" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
</section>
<style>
    .CreateSection {
        background-color: green !important;
    }

    label {
        display: flex;
        align-self: flex-start
    }

    input {
        width: 300px !important;
    }
</style>
